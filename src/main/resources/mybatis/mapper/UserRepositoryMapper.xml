<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="team.cms.repository.UserRepository">
    <insert id="addUser" keyProperty="user.id">
        insert into user(user_name, pass_word, birthday, telephone, email, role)
        values (#{user.userName}, #{user.passWord}, #{user.birthday}, #{user.telephone}, #{user.email}, #{user.role})
    </insert>

    <select id="getUserList" resultType="team.cms.entity.User">
        select * from user
    </select>
    <select id="getUserByUserName" resultType="team.cms.entity.User">
        select * from user where user_name = #{userName}
    </select>
</mapper>